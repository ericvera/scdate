{
  "name": "scdate",
  "version": "0.2.5",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "!/**/__test__",
    "!*.test.*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc --build",
    "build:clean": "yarn build --clean && rimraf dist && rimraf *.tgz",
    "lint": "eslint .",
    "test": "vitest run",
    "test:utc": "TZ=Etc/Universal yarn test",
    "test:watch": "vitest",
    "test:utc:watch": "TZ=Etc/Universal yarn test:watch",
    "smoke": "yarn build && yarn lint && yarn test:utc",
    "docs": "typedoc && prettier --ignore-unknown --write docs/",
    "-- PRE-COMMIT HOOKS --": "",
    "localAfterInstall": "is-ci || husky || true",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "dependencies": {
    "@date-fns/utc": "^1.2.0",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^20.14.2",
    "eslint": "^9.4.0",
    "husky": "^9.0.11",
    "is-ci": "^3.0.1",
    "lint-staged": "^15.2.5",
    "pinst": "^3.0.0",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^4.0.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0",
    "vitest": "^1.6.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericvera/scdate"
  },
  "keywords": [
    "date",
    "time zones",
    "time",
    "datetime",
    "immutable",
    "schedule",
    "timestamp"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  },
  "packageManager": "yarn@4.1.1"
}
